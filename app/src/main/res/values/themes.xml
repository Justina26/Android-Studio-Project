<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JusApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#F3E1F6</item>
        <item name="colorOnPrimary">#F3E1F6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">#F3E1F6</item>
        <item name="colorOnSecondary">#F3E1F6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#F3E1F6</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JusApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JusApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JusApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>